{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "BracketStyle": {
      "type": "object",
      "properties": {
        "OpeningBracket": {
          "type": "string",
          "enum": [
            "[",
            "(",
            "{"
          ],
          "description": "Defines the opening bracket style."
        },
        "ClosingBracket": {
          "type": "string",
          "enum": [
            "]",
            ")",
            "}"
          ],
          "description": "Defines the closing bracket style."
        },
        "TextMarker": {
          "type": "string",
          "description": "Defines the text marker."
        },
        "SearchSelectionOnly": {
          "type": "boolean",
          "description": "Restricts search to selection only if true."
        },
        "ShowMessages": {
          "type": "boolean",
          "description": "Shows messages if true."
        }
      },
      "required": [
        "OpeningBracket",
        "ClosingBracket",
        "TextMarker",
        "SearchSelectionOnly",
        "ShowMessages"
      ]
    },
    "ContentControlConfig": {
      "type": "object",
      "properties": {
        "LockContentControl": {
          "type": "boolean",
          "description": "Locks content control if true."
        },
        "RemoveContentControlOnEdit": {
          "type": "boolean",
          "description": "Removes content control when edited if true."
        },
        "RemoveHighlighting": {
          "type": "boolean",
          "description": "Removes highlighting if true."
        },
        "AddHighlighting": {
          "type": "boolean",
          "description": "Adds highlighting if true."
        }
      },
      "required": [
        "LockContentControl",
        "RemoveContentControlOnEdit",
        "RemoveHighlighting",
        "AddHighlighting"
      ]
    }
  },
  "required": [
    "BracketStyle",
    "ContentControlConfig"
  ]
}
